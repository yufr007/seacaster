{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "artifacts",
        "cache",
        "typechain-types"
    ]
}