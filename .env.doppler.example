# =====================================
# FARCASTER (Required)
# =====================================
FARCASTER_APP_ID="seacaster"
FARCASTER_HUB_URL="https://hub-api.neynar.com/v1"
NEYNAR_API_KEY="neynar_xxx..." # Get from https://dev.neynar.com

# =====================================
# DATABASE (Required)
# =====================================
# Neynar-managed or Supabase PostgreSQL
