# Database - Prisma requires both URLs for Supabase
# DATABASE_URL uses pgBouncer (port 6543) for connection pooling
# DIRECT_URL bypasses pgBouncer (port 5432) for migrations
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# Supabase REST API (alternative to Prisma)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
USE_PRISMA="true"

# Redis (Upstash or self-hosted)
REDIS_URL="redis://localhost:6379"

# Server
PORT=8080
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Farcaster
FARCASTER_WEBHOOK_SECRET="your-farcaster-webhook-secret"
FARCASTER_APP_ID="seacaster"

# Blockchain (Base L2)
RPC_BASE_URL="https://mainnet.base.org"
RPC_BASE_SEPOLIA_URL="https://sepolia.base.org"
PRIVATE_KEY="your-private-key-for-contract-interactions"

# USDC Contract Addresses
USDC_ADDRESS_MAINNET="0xD9aAEc86B65D86f6A7B5B1b0c42FFF36152b37f8"
USDC_ADDRESS_SEPOLIA="your-test-usdc-address"

# Smart Contract Addresses
SEASON_PASS_ADDRESS="0x6E1A9f233A4128d0386Ac8cD6A53844787891971"
TOURNAMENT_ESCROW_ADDRESS="0x9465e54e3287ea00E4cF243f86FB927849e780e3"
MARKETPLACE_ADDRESS="0x47DD58c99EE81910f4631Df3aF8Cc8FbfBb25Baf"

# Admin Wallet (for contract interactions)
